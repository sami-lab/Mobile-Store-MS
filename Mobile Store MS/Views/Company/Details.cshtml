@model Mobile_Store_MS.ViewModel.CompanyViewModel.CompanyViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Details";
    var photoPath = "~/Image/" + (Model.Photopath ?? "download.jpg");
}

<h1>Details</h1>

<div>
    <h4>Company Details</h4>
    <hr />
    <div class="row">
        <div class="col-6">
            <img class="card-img-top" src="@photoPath" asp-append-version="true" />
        </div>
        <dl class="col-6">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phoneid)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phoneid)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Com_name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Com_name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.com_country)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.com_country)
            </dd>
        </dl>
        
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Phoneid }) |
    <a asp-action="Index">Back to List</a>
    <a asp-action="Create" asp-controller="Vendor" asp-route-PhoneId="@Model.Phoneid">Add Vendor</a>
</div>
