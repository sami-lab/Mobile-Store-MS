@model IEnumerable<Mobile_Store_MS.ViewModel.StockViewModel>

@{
    ViewData["Title"] = "BrandStock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>BrandStock</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>



            <th>
                @Html.DisplayNameFor(model => model.Com_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.model_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>


            <td>
                @Html.DisplayFor(modelItem => item.Com_name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.model_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
                
            </td>
            <td>
                <a asp-controller="Purchasing" asp-action="Create" asp-route-store_id="@item.store_id" asp-route-modelId="@item.modelId" asp-route-PhoneId="@item.Phoneid">Add Stock</a>
            </td>
        </tr>
}
    </tbody>
</table>
