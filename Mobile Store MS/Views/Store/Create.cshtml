@model Mobile_Store_MS.ViewModel.Store.StoreViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>StoreViewModel</h4>
<hr />

  
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row justify-content-center">
        <div class="col-md-5 m-1 border">
            <h4 class="text-center mt-1 text-info">Enter Store Details</h4>
            <div class="form-group">
                <label asp-for="StoreName" class="control-label"></label>
                <input asp-for="StoreName" class="form-control" />
                <span asp-validation-for="StoreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupportNo" class="control-label"></label>
                <input asp-for="SupportNo" class="form-control" />
                <span asp-validation-for="SupportNo" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="City" class="control-label ml-3"></label>
                <div class="col-12">
                    <select asp-for="City" class="col-12 custom-select mr-sm-2"
                            asp-items="@(new SelectList( @ViewBag.cities,"id","city"))">
                        <option value="">Please Select</option>
                    </select>
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5 m-1 border">

            <p class="text-danger font-weight-bold"> Make Sure To Enter Correct Longitude and Longitude.Not Sure How to Do? <span><a href="#help" class="text-primary"> Click here</a> </span> </p>
            <div class="form-group">
                <label asp-for="Lat" class="control-label"></label>
                <input asp-for="Lat" class="form-control" />
                <span asp-validation-for="Lat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lng" class="control-label"></label>
                <input asp-for="Lng" class="form-control" />
                <span asp-validation-for="Lng" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CompleteAddress" class="control-label"></label>
                <textarea asp-for="CompleteAddress" rows="3" cols="40" class="form-control"></textarea>
                <span asp-validation-for="CompleteAddress" class="text-danger"></span>
            </div>


            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Cancel</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
        
   
</form>


<div id="help mt-5">
    <h4>Follow Steps to Find Longitude and Latitude</h4>
    <h4>1- On your computer, open <a target="_blank" href="https://www.google.com/maps">Google Maps</a></h4>
    <h4>2- Right-click the place or area on the map.</h4>
    <h4>3- Select What's here?</h4>
    <h4>4- At the bottom, you’ll see a card with the coordinates.</h4>
