@model IEnumerable<Mobile_Store_MS.ViewModel.VendorViewModel.VendorViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Vendor Details</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="panel panel-primary filterable">
        <div class="panel-heading rounded">
            <h3 class="panel-title font-weight-bold">Vendors</h3>
            <div class="pull-right">
                <button class="btn btn-default btn-xs btn-filter"><i class="fas fa-filter"></i> Filter</button>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr class="filters">
                    <th><input type="text" class="form-control" placeholder="@Html.DisplayNameFor(model => model.ven_id)" disabled></th>
                    <th><input type="text" class="form-control" placeholder="@Html.DisplayNameFor(model => model.ven_name)" disabled></th>
                    <th><input type="text" class="form-control" placeholder=" @Html.DisplayNameFor(model => model.ven_phone)" disabled></th>
                    <th><input type="text" class="form-control" placeholder="@Html.DisplayNameFor(model => model.ven_comName)" disabled></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ven_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ven_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ven_phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ven_comName)
                        </td>
                        <td>
                            <form method="post" asp-action="Delete" asp-route-id="@item.ven_id">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ven_id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ven_id }) |                        
                                <span id="confirmDeleteSpan_@item.ven_id" style="display:none">
                                    <span><b>Are you sure you want to delete?</b></span>
                                    <button type="submit" class="btn btn-danger">Yes</button>
                                    <a href="#/" class="btn btn-primary"
                                       onclick="confirmDelete('@item.ven_id', false)">No</a>
                                </span>

                                <span id="deleteSpan_@item.ven_id">
                                    <a href="#/"
                                       onclick="confirmDelete('@item.ven_id', true)">Delete</a>
                                </span>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <script src="~/js/CustomScript.js"></script>
    <script src="~/js/Filter.js"></script>
}